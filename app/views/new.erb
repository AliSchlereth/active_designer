<!DOCTYPE html>
<html>

<head>
  <title>SQL Helper</title>
  <link rel="stylesheet" href="js/bootstrap-4.0.0-alpha.5-dist/css/bootstrap.min.css" integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous">
  <script src="js/tether-1.3.3/dist/js/tether.min.js"></script>
  <script src="js/jquery-3.1.1.js"></script>
  <script src="js/bootstrap-4.0.0-alpha.5-dist/js/bootstrap.min.js" integrity="sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK" crossorigin="anonymous"></script>

  <script src="js/jsPlumb-2.2.8.js"></script>
  <script src="js/schema/jsPlumb.js"></script>
  <script src="js/schema/edit-checker.js"></script>
  <script src="js/schema/edit-table-name.js"></script>
  <script src="js/schema/listeners.js"></script>
  <script src="js/schema/mouse-controls.js"></script>
  <script src="js/schema/add-column.js"></script>
  <script src="js/schema/table-html.js"></script>
  <script src="js/schema/main.js"></script>
  <script src="js/schema/upload.js"></script>
  <link rel="stylesheet" href='css/main.css' >
  <link rel="stylesheet" href='css/cards.css' >
  <link rel="stylesheet" href="css/font-awesome-4.7.0/css/font-awesome.min.css">
</head>

<body>
  <nav class="navbar bg-inverse">
    <ul class="nav navbar-nav">
      <li class="nav-item taco float-xs-left">
        <a class="btn btn-default" data-toggle='popover' data-trigger='hover' data-content='Create a new table' href='#' >
          <i class="fa fa-plus-square-o fa-3x" aria-hidden="true"></i>
        </a>
      </li>

      <li class="nav-item float-xs-left scroller">
        <div class="switch">
          <div id='zoom-out' class='zoom-button'>
            <i  class="fa fa-chevron-circle-left fa-2x" aria-hidden="true"></i>
          </div>
          <div class='slider-box'>
          </div>
          <div class="slider round">
            <i class="fa fa-arrows-h" aria-hidden="true"></i>
          </div>
          <div id='zoom-in' class='zoom-button'>
            <i class="fa fa-chevron-circle-right fa-2x" aria-hidden="true"></i>
          </div>
        </div>

      </li>

      <li class="nav-item float-xs-center">
        <a class="btn btn-default navbar-brand" data-toggle='popover' data-trigger='hover' data-placement="left" data-content='Enter name of database' href='#' >
          <h2>Database</h2>
        </a>
      </li>

      <li class="nav-item float-xs-right">
        <a class="btn btn-default" data-toggle='popover' data-trigger='hover' data-placement="left" data-content='Print Queries' href='#' >
          <i class="fa fa-print fa-3x" aria-hidden="true"></i>
        </a>
      </li>
      <li class="nav-item float-xs-right">
        <a class="btn btn-default" data-toggle='popover' data-trigger='hover' data-placement="left" data-content='Upload Schema' href='#' >
          <i class="fa fa-pencil-square-o fa-3x" aria-hidden="true"></i>
        </a>
      </li>
    </ul>
  </nav>
  <div class="alert-bar">

  </div>

  <div id="bar" class="canvasBorder" >
    <div id="foo" class="jsPlumbBoundary" >
      <% table_x = 10 %>
      <% table_y = 10 %>
      <% @tables.each do |table_id,table| %>
        <div class='card' id='<%= table_id %>' style="top:<%="#{table_y}"%>px;left:<%="#{table_x}"%>px;">
          <div class='card-header'>
            <i class="fa fa-arrows" aria-hidden="true"></i>
            <h4 class='card-title table-title' data-toggle='popover' data-trigger='hover' data-content='Edit table name'>
              <%= table[:name] %>
            </h4>
            <div class='table-nav-buttons'>
              <i class='fa fa-plus-square' data-toggle='popover' data-trigger='hover' data-content='Add column'></i>
              <i class='fa fa-trash' data-toggle='popover' data-trigger='hover' data-content='Destroy table'></i>
            </div>
          </div>
          <div class='card-block'>
            <ul class='list-group'>
              <li class='list-group-item' id="<%= table_id %>-id-column">
                <span class='tag tag-default float-xs-left type-span'>integer</span>
                <div class='column-title-outer' >
                  <span class='column-title' >id</span>
                </div>
              </li>
              <% table[:columns].each do |column_id,column| %>
              <li class='list-group-item' id='<%= column_id %>'>
                <span class='tag tag-default float-xs-left type-span' data-toggle='popover' data-trigger='hover' data-content='Edit type'><%= column[:type] %></span>
                <div class='column-title-outer' >
                  <span class='column-title' data-toggle='popover' data-trigger='hover' data-content='Edit column name'><%= column[:name] %></span>
                </div>
              </li>
              <% end %>
              <% table[:references].each do |reference_id,reference| %>
              <li class='list-group-item' id='<%= reference_id %>'>
                <span class='tag tag-default float-xs-left type-span'>integer</span>
                <div class='column-title-outer' >
                  <span class='column-title'><%= "#{reference[:foreign_table_name]}_id" %></span>
                </div>

              </li>
              <% end %>
            </ul>
          </div>
        </div>
        <% if table_x >= 650 %>
          <% table_x = 10 %>
          <% table_y = table_y + 300 %>
        <% else %>
          <% table_x = table_x + 275 %>
        <% end %>
      <% end %>
    </div>
  </div>
  <schema><%= @tables.to_json %></schema>

</body>

</html>
